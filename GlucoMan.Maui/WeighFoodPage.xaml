<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GlucoMan.Maui.WeighFoodPage"
             Title="Weighing your portion of food">
    <ContentPage.Content>
        <ScrollView Padding="15,10,15,10">
            <!--Grid of all the page-->
            <Grid 
                Margin="5"
                RowSpacing="10"
                RowDefinitions="Auto, 
                    Auto,Auto,Auto,Auto,Auto,
                    Auto,Auto,Auto,Auto,Auto,
                    Auto">
                
                <!-- Action buttons: Back and Choose - MOVED TO TOP -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            x:Name="btnChoose" 
                            Text="Keep" 
                            BackgroundColor="LightGreen" 
                            TextColor="Black"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            ToolTipProperties.Text="Save changes and return the modified food data"
                            Clicked="btnChoose_Click" />
                    
                    <Button Grid.Column="1" 
                            x:Name="btnBack" 
                            Text="Forget" 
                            BackgroundColor="LightCoral" 
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            ToolTipProperties.Text="Cancel changes and return to the previous page"
                            Clicked="btnBack_Click" />
                </Grid>

                <Label Grid.Row="1" 
                       Text="Weigh food to calculate CHO.&#10; Returns cooked food's weight to raw ratio" 
                       VerticalOptions="Center" HorizontalOptions="Start"
                       Margin="0,0,0,10" />
                <Grid Grid.Row="2" Grid.Column="0"
                      Margin="0,5,0,10"
                      RowDefinitions="Auto,60"
                      ColumnDefinitions="*,
                        60,60,65,65,65">
                    <!--Name of the foood, CHO%, unit, buttons-->
                    <Label Grid.Row="0" Grid.Column="0" Text="Name" 
                           HorizontalTextAlignment="Center" VerticalTextAlignment="End"/>
                    <Entry x:Name="txtFoodName"
                           Grid.Row="1" Grid.Column="0"
                           BackgroundColor="LightGreen" TextColor="Black"
                           ToolTipProperties.Text="Name: short name of this food"
                           Margin="2" HorizontalTextAlignment="Start"/>
                    
                    <Label Grid.Row="0" Grid.Column="1" Text="CHO [%]" 
                           HorizontalTextAlignment="Center" VerticalTextAlignment="End"/>
                    <Entry Grid.Row="1" Grid.Column="1" 
                           x:Name="txtFoodCarbohydratesPerUnit" 
                       BackgroundColor="GreenYellow" TextColor="Black"
                       Margin="2" 
                       ToolTipProperties.Text="CHO%: percent carbohydrates of this food [%]"
                       Keyboard="Numeric" HorizontalTextAlignment="End"
                       />

                    <Label Grid.Row="0" Grid.Column="2" Text="Unit" HorizontalTextAlignment="Center" VerticalTextAlignment="End"
                       LineBreakMode="TailTruncation"/>
                    <Button Grid.Row="1" Grid.Column="2" 
                            x:Name="btnUnit" Margin="2"
                            Clicked="ResetUnitToGrams"
                            VerticalOptions="Center" HorizontalOptions="Fill"
                            ToolTipProperties.Text="Unit: unit of measurement chosen for this food. Click to reset to grams."/>
                    
                    <Button Grid.Row="1" Grid.Column="3" 
                            Text="Calc" Margin="2"
                            VerticalOptions="Center" HorizontalOptions="Fill"
                            Clicked="btnCalc_Click"/>
 
                    <Button Grid.Row="1" Grid.Column="4" x:Name="btnFoodDetail" Margin="2"
                            ImageSource="foods.png"
                            ToolTipProperties.Text="Foods: opens the page of foods to import one"
                            LineBreakMode="WordWrap" Clicked="btnFoods_ClickAsync" />
                    
                    <Image Grid.Row="1" Grid.Column="5" 
                           x:Name="txtIngredientChoGrams"
                           Source="calculator.png"
                           VerticalOptions="Center" HorizontalOptions="Fill"
                           Margin="2">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Calculator_Click" />
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
                <!--Separator-->
                <Label Grid.Row="3" Grid.ColumnSpan="5" 
                        Text="Weight data about ALL the food before cooking (raw)" 
                        HorizontalTextAlignment="Center" VerticalTextAlignment="End"
                        FontAttributes="Bold"
                        Margin="0,10,0,5"/>
                <!--Grid of part of the food before cooking (currenlty un used)
                <ListView Grid.Row="3" x:Name="gridFoodsBeforeCooking" 
                          ItemsSource="{Binding}"
                          ToolTipProperties.Text="List of the foods in this meal"
                          RowHeight="25"
                          Margin="5,0,5,5">
                    <ListView.Header>
                        <Grid ColumnDefinitions="100,100,100">
                            <Label Grid.Column="0" Margin="2" Text="Gross weight" 
                                   HorizontalTextAlignment="Start" />
                            <Label Grid.Column="1" Margin="2" Text="Tare" 
                                   HorizontalTextAlignment="Center" />
                            <Label Grid.Column="2" Margin="2" Text="Net weight" 
                                   HorizontalTextAlignment="Center"/>
                        </Grid>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid Margin="3" ColumnDefinitions="100,100,100">
                                            <Entry Grid.Column="0" 
                                               Keyboard="Numeric" HorizontalTextAlignment ="End" Text="" 
                                               Unfocused="TxtM0RawGross_Leave" Placeholder="[g]" BackgroundColor="PaleGoldenrod" />
                                            <Entry Grid.Column="1" HorizontalTextAlignment ="End" Text="" 
                                               Keyboard="Numeric" Unfocused="TxtM0RawTare_Leave" Placeholder="[g]" BackgroundColor="PaleGoldenrod" />
                                            <Entry Grid.Column="2"  HorizontalTextAlignment ="End" Text="" 
                                               Keyboard="Numeric" Unfocused="TxtM0RawNet_Leave"  Placeholder="[g]" BackgroundColor="PaleGreen" />
                                    </Grid>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>-->

                <!-- Weight data of raw food portion-->
                <Grid Grid.Row="4" Grid.Column="0"
                      RowDefinitions="Auto,Auto"
                      ColumnDefinitions="*,*,*"
                      Margin="5,0,5,10">
                    <Label Grid.Row="0" Grid.Column="0" Margin="2" Text="Gross weight" 
                            HorizontalTextAlignment="Center" />
                    <Label Grid.Row="0" Grid.Column="1" Margin="2" Text="Tare" 
                            HorizontalTextAlignment="Center" />
                    <Label Grid.Row="0" Grid.Column="2" Margin="2" Text="Net weight" 
                            HorizontalTextAlignment="Center"/>
                    <Entry Grid.Row="1" Grid.Column="0" x:Name="TxtM0RawGross" 
                       Keyboard="Numeric" HorizontalTextAlignment ="End" Text="" 
                       Unfocused="TxtM0RawGross_Leave" Placeholder="[g]" BackgroundColor="PaleGoldenrod" />
                    <Entry Grid.Row="1" Grid.Column="1" x:Name="TxtM0RawTare" HorizontalTextAlignment ="End" Text="" 
                       Keyboard="Numeric" Unfocused="TxtM0RawTare_Leave" Placeholder="[g]" BackgroundColor="PaleGoldenrod" />
                    <Entry Grid.Row="1" Grid.Column="2" x:Name="TxtM0RawNet" HorizontalTextAlignment ="End" Text="" 
                       Keyboard="Numeric" Unfocused="TxtM0RawNet_Leave"  Placeholder="[g]" BackgroundColor="PaleGreen" />
                </Grid>
                <!--Separator-->
                <Label Grid.Row="5" Grid.ColumnSpan="5" 
                       Text="Weight data about ALL the food after cooking (cooked)" 
                       HorizontalTextAlignment="Center" VerticalTextAlignment="End"
                       FontAttributes="Bold"
                       Margin="0,10,0,5"/>
                <!-- Weight data of cooked portion-->
                <Grid Grid.Row="6" Grid.Column="0" 
                      RowDefinitions="Auto,Auto"
                      ColumnDefinitions="*,*,*"
                      Margin="5,0,5,10">
                    <Label Grid.Row="0" Grid.Column="0" Margin="2" Text="Gross weight" 
                            HorizontalTextAlignment="Center" />
                    <Label Grid.Row="0" Grid.Column="1" Margin="2" Text="Tare" 
                            HorizontalTextAlignment="Center" />
                    <Label Grid.Row="0" Grid.Column="2" Margin="2" Text="Net weight" 
                            HorizontalTextAlignment="Center"/>
                    <Entry Grid.Row="1" Grid.Column="0" x:Name="TxtS1CookedGross" HorizontalTextAlignment ="End" Text="" 
                           Keyboard="Numeric" Unfocused="TxtS1CookedGross_Leave" Placeholder="[g]" BackgroundColor="PaleGoldenrod" />
                    <Entry Grid.Row="1" Grid.Column="1" x:Name="TxtS1CookedTare" HorizontalTextAlignment ="End" Text="" 
                       Keyboard="Numeric" Unfocused="TxtS1CookedTare_Leave" Placeholder="[g]" BackgroundColor="PaleGoldenrod" />
                    <Entry Grid.Row="1" Grid.Column="2" x:Name="TxtS1CookedNet" HorizontalTextAlignment ="End" Text="" 
                       Keyboard="Numeric" Unfocused="TxtS1CookedNet_Leave" Placeholder="[g]" BackgroundColor="PaleGreen" />
                </Grid>
                <!--Separator-->
                <Label Grid.Row="7" Grid.ColumnSpan="5" 
                       Text="Weight data about the cooked portion" 
                       HorizontalTextAlignment="Center" VerticalTextAlignment="End"
                       FontAttributes="Bold"
                       Margin="0,10,0,5"/>
                <!-- Radio Button options -->
                <Grid Grid.Row="8" Grid.ColumnSpan="5" 
                      Margin="10,15,10,15" 
                      ColumnDefinitions="*,*"
                      RowSpacing="5">

                    <StackLayout Grid.Column="0" Orientation="Horizontal" Spacing="10"
                                 HorizontalOptions="Center">
                        <RadioButton x:Name="rbWeighCookedPortion"
                                     Content="Weigh the portion"
                                     HorizontalOptions="Center"
                                     GroupName="WeighingOptions"
                                     FontSize="14"
                                     ToolTipProperties.Text="Weigh the cooked portion: the CHO of the portion will be proportional to the measured weight of the cooked portion"
                                     CheckedChanged="OnWeighCookedPortionCheckedChanged" />
                    </StackLayout>
                    
                    <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="10"
                                 HorizontalOptions="Center">
                        <RadioButton x:Name="rbDivideIntoEqualPortions"
                                     Content="Equal portions"
                                     HorizontalOptions="Center"
                                     GroupName="WeighingOptions"
                                     FontSize="14"
                                     ToolTipProperties.Text="Divide all food into equal portions: the portion will be calculated by dividind total food by N persons"
                                     CheckedChanged="OnDividePortionsCheckedChanged" />
                    </StackLayout>
                </Grid>
                <!--Weight data about cooked portion-->
                <Grid Grid.Row="9" Grid.Column="0"
                      x:Name="SectionWeightOfCookedPortion"
                      RowDefinitions="Auto,Auto"
                      ColumnDefinitions="*,*,*"
                      Margin="5,0,5,10">
                    <Label Grid.Row="0" Grid.Column="0" Margin="2" Text="Gross weight" 
                            HorizontalTextAlignment="Center" />
                    <Label Grid.Row="0" Grid.Column="1" Margin="2" Text="Tare" 
                            HorizontalTextAlignment="Center" />
                    <Label Grid.Row="0" Grid.Column="2" Margin="2" Text="Net weight" 
                            HorizontalTextAlignment="Center"/>
                    <Entry Grid.Row="1" Grid.Column="0" x:Name="TxtCookedPortionGross" 
                       Keyboard="Numeric" HorizontalTextAlignment ="End" Text="" 
                       Unfocused="TxtCookedPortionGross_Leave" Placeholder="[g]" BackgroundColor="PaleGoldenrod" />
                    <Entry Grid.Row="1" Grid.Column="1" x:Name="TxtCookedPortionTare" HorizontalTextAlignment ="End" Text="" 
                       Keyboard="Numeric" Unfocused="TxtCookedPortionTare_Leave" Placeholder="[g]" BackgroundColor="PaleGoldenrod" />
                    <Entry Grid.Row="1" Grid.Column="2" x:Name="TxtCookedPortionNet" HorizontalTextAlignment ="End" Text="" 
                       Keyboard="Numeric" Unfocused="TxtCookedPortionNet_Leave"  Placeholder="[g]" BackgroundColor="PaleGreen" />
                </Grid>
                <!--Number of portions-->
                <Grid Grid.Row="9" Grid.Column="0"
                      x:Name="SectionNumberCookedPortion"
                      RowDefinitions="Auto,Auto"
                      ColumnDefinitions="*,*,*"
                      Margin="5,0,5,10">
                    <Label Grid.Row="0" Grid.Column="1" Margin="2" Text="No of portions" 
                           HorizontalTextAlignment="Center"
                           HorizontalOptions="Center"/>
                    <Entry Grid.Row="1" Grid.Column="1" x:Name="TxtNPortions" 
                           HorizontalTextAlignment ="Center" Text="" 
                       Keyboard="Numeric" Unfocused="TxtNPortions_Leave"  Placeholder="[g]" BackgroundColor="PaleGreen" />
                </Grid>

                <Label Grid.Row="10" Text="Summary data" 
                       HorizontalTextAlignment="Center" VerticalTextAlignment="End"
                       FontAttributes="Bold"
                       Margin="0,10,0,5"/>

                <Grid Grid.Row="11" Grid.Column="0"
                      RowDefinitions="Auto,Auto"
                      ColumnDefinitions="*,*"
                      Margin="5,0,5,10">
                    <Label Grid.Row="0" Grid.Column="0" Margin="2" Text="CHO% of portion" 
                            HorizontalTextAlignment="Center" />
                    <Label Grid.Row="0" Grid.Column="1" Margin="2" Text="Weight of portion" 
                            HorizontalTextAlignment="Center" />
                    <Entry Grid.Row="1" Grid.Column="0" x:Name="TxtCarboydratesOfPortion" 
                       Keyboard="Numeric" HorizontalTextAlignment ="End" Text="" 
                       Unfocused="TxtCookedPortionGross_Leave" Placeholder="[g]" 
                       BackgroundColor="CadetBlue" TextColor="White" />
                    <Entry Grid.Row="1" Grid.Column="1" x:Name="TxtWeightOfPortion" HorizontalTextAlignment ="End" Text="" 
                       Keyboard="Numeric" Unfocused="TxtCookedPortionTare_Leave" Placeholder="[g]"
                       BackgroundColor="DeepSkyBlue" TextColor="Black"/>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>