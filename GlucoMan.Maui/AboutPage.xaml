<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:GlucoMan.Maui.Resources.Strings"
             x:Class="GlucoMan.Maui.AboutPage"
             Title="{x:Static res:AppStrings.AboutPageTitle}">
    <ScrollView>
        <Grid RowDefinitions="*">
            <VerticalStackLayout VerticalOptions="Fill" HorizontalOptions="Fill">
                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <ContentView Padding="0,20,0,20" VerticalOptions="Fill">
                        <Image Source="Current_Logo_Transparent.png" VerticalOptions="Center" HeightRequest="50" />
                    </ContentView>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <ScrollView Grid.Row="0">
                <VerticalStackLayout Padding="20,24,20,24" Spacing="8">
                    <Border BackgroundColor="#2196F3" Padding="0">
                        <Label x:Name="lblAppName" Text="{x:Static res:AppStrings.AppTitle}" HorizontalTextAlignment="Center" TextColor="White" FontSize="32"/>
                    </Border>
                    <Label Text="{x:Static res:AppStrings.AppShortScope}" FontSize="20" Padding="0,0,0,0"/>
                    <Label Text="{x:Static res:AppStrings.AppAboutParagrah1}"  
                           FontSize="15" Padding="0,0,0,0"/>
                    <Label Text="{x:Static res:AppStrings.AppAboutParagrah2}"
                           FontSize="15" Padding="0,0,0,0"/>
                    <Label Text="{x:Static res:AppStrings.AppAboutParagrah3}"
                           FontSize="15" Padding="0,0,0,0"/>
                     
                    <Label Text="The function of every button or entry box is explained by a 'tooltip' text. Keep the button or entry box pressed for a sufficient time to see the text popping out" 
                 FontSize="13" HorizontalTextAlignment="Start" Padding="0,0,0,0"/>
                    <Label Text="GlucoMan is Free Software (licence: GPL v.2) initiated by:" FontSize="15" HorizontalTextAlignment="Center" Padding="0,0,0,0"/>
                    <Label Text="Ing.Gabriele Monti (gamon) - ForlÃ¬ - Italia" FontSize="17" HorizontalTextAlignment="Center" Padding="0,0,0,0"/>
                    <Label FontSize="13" Padding="5,5,5,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span Text="Distribution at "/>
                                    <Span x:Name="tempText" Text="https://github.com/gamondue/GlucoProgs" FontAttributes="Bold"/>
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Button x:Name="btnExit" TextColor="White" Text="{x:Static res:AppStrings.Back}" Clicked="btnExit_Click" />
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </ScrollView>
</ContentPage>