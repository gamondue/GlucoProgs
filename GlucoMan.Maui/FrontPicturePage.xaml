<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlucoMan.Maui.FrontPicturePage"
             Title="Front past injections">
    <VerticalStackLayout>
        <HorizontalStackLayout HeightRequest="40">
            <CheckBox x:Name="EditorCheckBox"  CheckedChanged="Is_Checked" />
            <Label VerticalTextAlignment="Center">Editor</Label>

            <Button x:Name="ButtonSave" Text="Save" Clicked="SaveCircleToFile" />
            <Button x:Name="ButtonClear" Text="Clear" Clicked="ClearFile" />
        </HorizontalStackLayout>
        <Image Source="busto_fronte.png" Scale="1"
               HeightRequest="600"
               HorizontalOptions="Center">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Image.GestureRecognizers>
        </Image>
    </VerticalStackLayout>
</ContentPage>