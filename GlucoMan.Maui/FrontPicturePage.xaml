<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlucoMan.Maui.FrontPicturePage"
             Title="Front past injections">
    <VerticalStackLayout>
        <HorizontalStackLayout x:Name="stackEditingOptions" HeightRequest="40">
            <CheckBox x:Name="EditorCheckBox" CheckedChanged="CheckedChanged"
                      HorizontalOptions="End"/>
            <Label VerticalTextAlignment="Center" Margin ="0" HorizontalTextAlignment="Start"
                   HorizontalOptions="Start">Editing</Label>
            <CheckBox x:Name="DeleteCheckBox"/>
            <Label VerticalTextAlignment="Center">Delete points</Label>
            <Button x:Name="btnSaveReferences" Text="Save points" Clicked="btnSave_Click" />
            <Button x:Name="btnClear" Text="Clear" Clicked="btnClear_Click" />
        </HorizontalStackLayout>
        <Grid>
            <Image Source="busto_fronte.png" Scale="1"
               HeightRequest="600"
               WidthRequest="400"
                   VerticalOptions="Start"
                   HorizontalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Image.GestureRecognizers>
            </Image>
            <GraphicsView x:Name="cerchiGraphicsView"
                    Drawable="{StaticResource drawable}"
                    HeightRequest="600"
                    WidthRequest="400"
                    VerticalOptions="Start"
                    HorizontalOptions="Center">
                <GraphicsView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </GraphicsView.GestureRecognizers>
            </GraphicsView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>