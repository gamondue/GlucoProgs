<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlucoMan.Maui.TakePicturePage"
             Title="Take Picture"
             BackgroundColor="Black">
    <Grid RowDefinitions="*,Auto" Padding="0">
        
        <!-- Camera Preview Area -->
        <Border Grid.Row="0" 
                Stroke="White" 
                StrokeThickness="2"
                Margin="10">
            <Grid x:Name="cameraPreviewContainer">
                <!-- Camera preview will be added here programmatically -->
                <Label x:Name="lblCameraStatus"
                       Text="Initializing camera..."
                       TextColor="White"
                       FontSize="Large"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Grid>
        </Border>
        
        <!-- Control Buttons Area -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,Auto,*"
              Padding="20"
              BackgroundColor="#222222">
            
            <!-- Cancel Button (Left) -->
            <Button Grid.Column="0"
                    x:Name="btnCancel"
                    Text="Cancel"
                    BackgroundColor="LightCoral"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    WidthRequest="100"
                    HorizontalOptions="Start"
                    ToolTipProperties.Text="Cancel: return without taking a photo"
                    Clicked="btnCancel_Click" />
            
            <!-- Capture Button (Center) - Circular -->
            <Border Grid.Column="1"
                    Stroke="White"
                    StrokeThickness="4"
                    WidthRequest="80"
                    HeightRequest="80"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Transparent">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="40" />
                </Border.StrokeShape>
                
                <Border Stroke="Transparent"
                        WidthRequest="70"
                        HeightRequest="70"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="35" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="btnCapture_Tapped" />
                    </Border.GestureRecognizers>
                </Border>
            </Border>
            
            <!-- Switch Camera Button (Right) -->
            <Button Grid.Column="2"
                    x:Name="btnSwitchCamera"
                    Text="Switch"
                    BackgroundColor="Gray"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    WidthRequest="100"
                    HorizontalOptions="End"
                    ToolTipProperties.Text="Switch: change between front and rear camera"
                    Clicked="btnSwitchCamera_Click" />
        </Grid>
    </Grid>
</ContentPage>
