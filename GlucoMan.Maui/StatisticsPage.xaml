<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:GlucoMan.Maui.Resources.Strings"
             x:Class="GlucoMan.Maui.StatisticsPage"
             Title="{x:Static res:AppStrings.StatisticsPageTitle}">
    <ScrollView Padding="10,10,10,10">
        <VerticalStackLayout Spacing="12">
            <Label x:Name="lblDateRange" 
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="Gray"/>

            <BoxView HeightRequest="2" 
                     Color="#e74c3c" 
                     Margin="0,10,0,10"/>

            <!-- ==================== GLUCOSE SECTION (Light Red Background) ==================== -->
            
            <!-- Blood Glucose -->
            <Frame Padding="12" 
                   CornerRadius="8"
                   BorderColor="#e74c3c"
                   BackgroundColor="#fdecea"
                   HasShadow="True"
                   Margin="0,0,0,0">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{x:Static res:AppStrings.StatBloodGlucose}"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#c0392b"/>
                    <Label x:Name="lblGlucoseDataSource"
                           FontSize="12"
                           HorizontalOptions="Center"
                           TextColor="Gray"/>
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
                        <Label Text="{x:Static res:AppStrings.StatMean}" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" TextColor="#34495e"/>
                        <Label x:Name="lblGlucoseMean" Grid.Row="0" Grid.Column="1" HorizontalOptions="End" TextColor="#27ae60"/>
                        <Label Text="{x:Static res:AppStrings.StatStdDev}" Grid.Row="1" Grid.Column="0" FontAttributes="Bold" TextColor="#34495e"/>
                        <Label x:Name="lblGlucoseStdDev" Grid.Row="1" Grid.Column="1" HorizontalOptions="End" TextColor="#c0392b"/>
                        <Label Text="{x:Static res:AppStrings.StatSamples}" Grid.Row="2" Grid.Column="0" FontAttributes="Bold" TextColor="#34495e"/>
                        <Label x:Name="lblGlucoseSamples" Grid.Row="2" Grid.Column="1" HorizontalOptions="End" TextColor="#8e44ad"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Morning Glucose -->
