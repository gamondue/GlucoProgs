                   CornerRadius="8"
                   BorderColor="#3498db"
                   BackgroundColor="#ebf5fb"
                   HasShadow="True"
                   Margin="0,5,0,5">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{x:Static res:AppStrings.StatTotalDayCHO}"
                           FontSize="18"
                           FontAttributes="Bold"
