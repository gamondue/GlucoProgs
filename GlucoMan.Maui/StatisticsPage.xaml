                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <BoxView HeightRequest="2" 
                     Color="#3498db" 
                     Margin="0,10,0,10"/>

            <!-- ==================== CHO SECTION (Light Blue Background) ==================== -->

            <!-- Total Day CHO -->
