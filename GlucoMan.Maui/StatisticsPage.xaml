                   CornerRadius="8"
                   BorderColor="#e74c3c"
                   BackgroundColor="#fdecea"
                   HasShadow="True"
                   Margin="0,0,0,0">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{x:Static res:AppStrings.StatMorningGlucose}"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#c0392b"/>
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
                        <Label Text="{x:Static res:AppStrings.StatMean}" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" TextColor="#34495e"/>
                        <Label x:Name="lblMorningGlucoseMean" Grid.Row="0" Grid.Column="1" HorizontalOptions="End" TextColor="#27ae60" Text="--"/>
                        <Label Text="{x:Static res:AppStrings.StatStdDev}" Grid.Row="1" Grid.Column="0" FontAttributes="Bold" TextColor="#34495e"/>
                        <Label x:Name="lblMorningGlucoseStdDev" Grid.Row="1" Grid.Column="1" HorizontalOptions="End" TextColor="#c0392b" Text="--"/>
                        <Label Text="{x:Static res:AppStrings.StatSamples}" Grid.Row="2" Grid.Column="0" FontAttributes="Bold" TextColor="#34495e"/>
                        <Label x:Name="lblMorningGlucoseSamples" Grid.Row="2" Grid.Column="1" HorizontalOptions="End" TextColor="#8e44ad" Text="--"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Midday Glucose -->
