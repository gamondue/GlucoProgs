<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:GlucoMan.Maui.Resources.Strings"
             xmlns:strings="clr-namespace:GlucoMan.Maui.Resources.Strings"
             x:Class="GlucoMan.Maui.StatisticsPage"
             Title="{x:Static res:AppStrings.StatisticsPageTitle}">
    <ScrollView Padding="15,10,15,10">
        <VerticalStackLayout Spacing="20">

            <Label x:Name="lblDateRange" 
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="Gray"/>
            
            <!-- Glucose Section -->
            <Frame Padding="5" 
                   CornerRadius="8"
                   BorderColor="#3498db"
                   BackgroundColor="#ecf9ff"
                   HasShadow="True"
                   Margin="0,10,0,0">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Blood Glucose"
                           FontSize="17"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#2c3e50"
                           Margin="0,0,0,3"/>

                    <Grid ColumnDefinitions="Auto, *, Auto, *, Auto, *" 
                          ColumnSpacing="5">
                        <!-- Mean Value -->
                        <Label Text="Mean:"
                               Grid.Column="0"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="#34495e"/>
                        <Label x:Name="lblMeanValue"
                               Grid.Column="1"
                               FontSize="16"
                               VerticalOptions="Center"
                               TextColor="#27ae60"
                               HorizontalOptions="End"/>
                        <!-- Standard Deviation -->
                        <Label Text="Std Dev:"
                               Grid.Column="2"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="#34495e"/>
                        <Label x:Name="lblStdDeviation"
                               Grid.Column="3"
                               FontSize="16"
                               VerticalOptions="Center"
                               TextColor="#e67e22"
                               HorizontalOptions="End"/>
                        <!-- Sample Count -->
                        <Label Text="Samples:"
                               Grid.Column="4"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="#34495e"/>
                        <Label x:Name="lblSampleCount"
                               Grid.Column="5"
                               FontSize="16"
                               VerticalOptions="Center"
                               TextColor="#8e44ad"
                               HorizontalOptions="End"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
