<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlucoMan.Maui.GlucoseMeasurementsPage"
             Title="Glucose Measurements">
    <ContentPage.Content>
        <!--RowDefinitions="40,50,50,50,30,30,*"-->
        <Grid RowDefinitions="Auto,Auto,Auto,65,Auto,Auto,*"
              ColumnDefinitions="*,*,*,*">
            <Label Grid.Row="0" Grid.Column="0" Text="Glucose&#10;[mg/dL]" HorizontalTextAlignment="Center" VerticalTextAlignment="End"
                   ToolTipProperties.Text="Glucose measurement taken from the instrument" LineBreakMode="WordWrap"/>
            <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="Measurement time" 
                   HorizontalTextAlignment="Center" VerticalTextAlignment="End"
                   ToolTipProperties.Text="Date and time of measurement of glucose"/>
            <Label Grid.Row="0" Grid.Column="3" Text="Id" HorizontalTextAlignment="Center" VerticalTextAlignment="End"/>

            <Entry Grid.Row="1" Grid.Column="0" x:Name="txtGlucose" Text="" FontSize="Medium"
                   Keyboard="Numeric" HorizontalTextAlignment="End" 
                   BackgroundColor="Lime" TextColor="Black"
                   ToolTipProperties.Text="Glucose measurement taken from the instrument" IsEnabled="true"/>
            <DatePicker Grid.Row="1" Grid.Column="1" x:Name="dtpEventDate" Margin="1"
                        BackgroundColor="PaleGreen" TextColor="Black"
                        HorizontalOptions="Center" VerticalOptions="Center"
                        ToolTipProperties.Text="Date of measurement of glucose"/>
            <TimePicker Grid.Row="1" Grid.Column="2" x:Name="dtpEventTime" 
                        BackgroundColor="PaleGreen" TextColor="Black"
                        HorizontalOptions="Center" VerticalOptions="Center" Margin="1"
                        Format="HH:mm:ss"
                        ToolTipProperties.Text="Time of measurement of glucose"/>
            <Label Grid.Row="1" Grid.Column="3" x:Name="txtIdGlucoseRecord" Text=""
                   HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />

            <!-- check box with associated label into a StackLayout -->
            <Entry Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"
                   x:Name="txtNotes" BackgroundColor="LightGreen" TextColor="Black"
                   HorizontalTextAlignment="Start" IsReadOnly="false"
                   ToolTipProperties.Text="Note about the measurement" />

            <Button Grid.Row="3" Grid.Column="0" x:Name="btnNow" Margin="1"
                    ImageSource="clock.png"
                    ToolTipProperties.Text="Now: sets the date and time at the current instant" 
                    Clicked="btnNow_Click"/>
            <!--Text="Now"-->
            <Grid Grid.Row="3" Grid.Column="1" ColumnDefinitions="*,*">
                <Button Grid.Row="0" Grid.Column="0" x:Name="btnAddMeasurement" Margin="1"
                        ImageSource="plus.png"
                        ToolTipProperties.Text="Plus: adds a new measurement with the data taken from UI" 
                        Clicked="btnAddMeasurement_Click"/>
                <!--Text="+"-->
                <Button Grid.Row="0" Grid.Column="1"
                        ImageSource="minus.png"
                        x:Name="btnRemoveMeasurement" Margin="1"
                    ToolTipProperties.Text="Minus: deletes the selected measurement" 
                    Clicked="btnRemoveMeasurement_Click"/>
                <!--Text="-"-->
            </Grid>
            <Button Grid.Row="3" Grid.Column="2" Margin="1"
                    ImageSource="clear_fields.png"
                    ToolTipProperties.Text="Clear Data: deletes the fields in the UI" 
                    Clicked="btnClearData_Click"/>
            <!--Text="Clear Data"-->
            <Button Grid.Row="3" Grid.Column="3" x:Name="btnSave" Margin="1"
                    ImageSource="floppy_disc.png"
                    ToolTipProperties.Text="Save: saves the modifications made on current measurement" 
                    Clicked="btnSave_ClickAsync"/>
            <!--Text="Save"-->
            <HorizontalStackLayout Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                <CheckBox VerticalOptions="Center" x:Name="chkNowInAdd" IsChecked="True">
                    <CheckBox.Margin>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS" Value="0,-10,0,0" />
                            <On Platform="Android, WinPhone, Windows" Value="0,-5,0,0" />
                        </OnPlatform>
                    </CheckBox.Margin>
                </CheckBox>
                <Label VerticalTextAlignment="Center" VerticalOptions="Center" Text="Add with Now as time">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer>

                        </TapGestureRecognizer>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <Label Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Text="Time" 
                   HorizontalTextAlignment="Center" VerticalTextAlignment="End"/>
            <Label Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Text="Gluc.[mg/dL]" HorizontalTextAlignment="Center" VerticalTextAlignment="End"/>

            <ListView Grid.Row="6" Grid.ColumnSpan="4"
                      x:Name="gridMeasurements" ItemsSource="{Binding}"
                      ToolTipProperties.Text="List of past glucose measurements"
                      ItemSelected="OnGridSelection" 
                      RowHeight="22">
                <!-- description of data to be shown, in a DataTemplate -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label HorizontalTextAlignment="Center" Grid.Column="0" Text="{Binding Timestamp}"/>
                                    <Label HorizontalTextAlignment="Center" Grid.Column="1" Text="{Binding GlucoseValue.Text}"/>
                                </Grid>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>