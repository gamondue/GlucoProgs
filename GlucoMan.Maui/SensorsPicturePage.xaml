<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:GlucoMan.Maui"
             x:Class="GlucoMan.Maui.SensorsPicturePage"
             Title="Sensors' previous positions">
    <ContentPage.Resources>
        <drawable:CirclesDrawable x:Key="allCircles" />
    </ContentPage.Resources>
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <HorizontalStackLayout>
                <Button x:Name="btnSaveInjection" Text="Save" 
                        ToolTipProperties.Text="Saves the injection point"
                        Clicked="btnSaveInjection_Clicked"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout x:Name="stackEditingOptions" Margin="0" Padding="0">
                <CheckBox x:Name="EditorCheckBox" Margin="0" HorizontalOptions="Start" 
                          ToolTipProperties.Text="Edits the reference points if checked"
                          CheckedChanged="CheckedChanged"/>
                <Label Margin="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Start"
                       ToolTipProperties.Text="Edits the reference points if checked">Ed.</Label>
                <CheckBox x:Name="DeleteCheckBox" HorizontalOptions="Start"
                          ToolTipProperties.Text="Deletes the reference points if checked"/>
                <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Start"
                       ToolTipProperties.Text="Deletes the reference points if checked">Del</Label>
                <Button x:Name="btnSavePoints" Text="Sv.p." 
                        ToolTipProperties.Text="Saves the reference points"
                        Clicked="btnSavePoints_Clicked" />
                <Button x:Name="btnClear" Text="Cl.p." 
                        ToolTipProperties.Text="Clears all reference points"
                        Clicked="btnClear_Click" />
            </HorizontalStackLayout>
        </HorizontalStackLayout>
        <Grid>
            <Image Source="braccia.png" Aspect="Center" Scale="1"
                   Margin="0,180"
                HeightRequest="180"
                WidthRequest="450"
                VerticalOptions="Start"
                HorizontalOptions="Center"
                ToolTipProperties.Text="Click on this image to set the point">
            </Image>
            <GraphicsView x:Name="cerchiGraphicsView"
                    Drawable="{StaticResource drawable}"
                    HeightRequest="180"
                    WidthRequest="450"
                    VerticalOptions="Start"
                    HorizontalOptions="Center">
                <!-- aggiunge un "riconoscitore di "tap" che lancia un evento quando l'utente 
                     "clicca" (col mouse) o "tappa" (col dito) sul GraphicsView. 
                     L'evento forzerï¿½ una riscrittura della GraphicsView -->
                <GraphicsView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </GraphicsView.GestureRecognizers>
            </GraphicsView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>