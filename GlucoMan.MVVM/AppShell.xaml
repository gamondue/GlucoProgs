<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GlucoMan.MVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    xmlns:pages="clr-namespace:GlucoMan.MVVM.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="GlucoMan.MVVM">

    <ShellContent
        Title="Glucoman"
        Icon="{StaticResource IconDashboard}"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="main" />

    <!--<ShellContent Title="Glucose" ContentTemplate="{DataTemplate pages:GlucoseMeasurementPage}" Route="glucose" />
    <ShellContent Title="Injections" ContentTemplate="{DataTemplate pages:InjectionsPage}" Route="injections" />
    <ShellContent Title="Meals" ContentTemplate="{DataTemplate pages:MealsPage}" Route="meals" />
    <ShellContent Title="New Meal" ContentTemplate="{DataTemplate pages:NewMealPage}" Route="newmeal" />
    <ShellContent Title="Calculate Insulin" ContentTemplate="{DataTemplate pages:InsulinCalcPage}" Route="insulincalc" />
    <ShellContent Title="Foods" ContentTemplate="{DataTemplate pages:FoodsPage}" Route="foods" />
    <ShellContent Title="Recipes" ContentTemplate="{DataTemplate pages:RecipesPage}" Route="recipes" />
    <ShellContent Title="Food to Target Carbs" ContentTemplate="{DataTemplate pages:FoodToHitTargetCarbsPage}" Route="foodtotargetcarbs" />
    <ShellContent Title="Hypoglycemia Prediction" ContentTemplate="{DataTemplate pages:HypoPredictionPage}" Route="hypoprediction" />
    <ShellContent Title="Miscellaneous Functions" ContentTemplate="{DataTemplate pages:MiscellaneousFunctionsPage}" Route="miscellaneousfunctions" />-->
    <ShellContent Title="Settings" ContentTemplate="{DataTemplate pages:SettingsPage}" Route="configuration" />
    <ShellContent Title="About" ContentTemplate="{DataTemplate pages:AboutPage}" Route="about" />

    <ShellContent
        Title="Projects"
        Icon="{StaticResource IconProjects}"
        ContentTemplate="{DataTemplate pages:ProjectListPage}"
        Route="projects" />

    <ShellContent
        Title="Manage Meta"
        Icon="{StaticResource IconMeta}"
        ContentTemplate="{DataTemplate pages:ManageMetaPage}"
        Route="manage" />
    
    <Shell.FlyoutFooter>
        <Grid Padding="15">
            <sf:SfSegmentedControl x:Name="ThemeSegmentedControl" 
                VerticalOptions="Center" HorizontalOptions="Center" SelectionChanged="SfSegmentedControl_SelectionChanged"
                SegmentWidth="40" SegmentHeight="40">
                <sf:SfSegmentedControl.ItemsSource>
                    <x:Array Type="{x:Type sf:SfSegmentItem}">
                        <sf:SfSegmentItem ImageSource="{StaticResource IconLight}"/>
                        <sf:SfSegmentItem ImageSource="{StaticResource IconDark}"/>
                    </x:Array>
                </sf:SfSegmentedControl.ItemsSource>
            </sf:SfSegmentedControl>
        </Grid>
    </Shell.FlyoutFooter>

</Shell>
